<ul class="media-list grid">
    <li class="grid-sizer"></li>
    <li v-for="media in mediaList" class="grid-item" v-on:click="openMedia(media)">
        <span>
            <img :src="media.url.thumb" alt="" />
        </span>
        <img :src="media.url.thumb" alt="" />
    </li>
</ul>

<section class="layer media-show" v-show="current.url">
    <span class="close" v-on:click="closeMedia">
        <i class="fa fa-times"></i>
    </span>

    <div class="preview">
        <img :src="current.url.full" alt="" />
    </div>
    <div class="description">
        <h3 v-if="isReady">\{{current.title}}</h3>
        <p v-if="isReady">\{{current.description}} &nbsp;</p>
        <div class="details">
            <ul>
                <li>
                    <i class="icon icon-camera"></i>
                    <span v-if="isReady">\{{current.camSettings.name}}</span>
                </li>
                <li>
                    <i class="icon icon-focal_length"></i>
                    <span v-if="isReady">\{{current.camSettings.focal}}</span>
                </li>
                <li>
                    <i class="icon icon-aperture"></i>
                    <span v-if="isReady">\{{current.camSettings.aperture}}</span>
                </li>
                <li>
                    <i class="icon icon-exposure_time"></i>
                    <span v-if="isReady">\{{current.camSettings.exposure_time}}</span>
                </li>
                <li>
                    <i class="icon icon-iso"></i>
                    <span v-if="isReady">\{{current.camSettings.iso}}</span>
                </li>
            </ul>
        </div>
    </div>
</section>
