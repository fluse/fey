<ul class="media-list ytGrid">
	<li v-for="media in mediaList" v-on:click="openMedia(media)">
	<div class="ytContainer">
		<img :src="media.url.thumb" alt="" class="videoThumb" />
		<div class="descContainer">
			<h3> \{{media.title}} </h3>
			  <br />
			<p> \{{media.description}} </p>
		</div>
	</div>
	</li>
</ul>


<section id="previewContainer" class="videolayer media-show hiddenOnLoad" v-show="current.url">
		<span class="close" v-on:click="closeMedia">
				<i class="fa fa-times"></i>
		</span>

		<div class="preview">
				<youtube :video-id="current.videoId" player-width="100%" player-height="300"></youtube>
		</div>
		<div  class="description ">
				<h3>\{{current.title}}</h3>
				<p>\{{current.description}} &nbsp;</p>
		</div>
</section>
